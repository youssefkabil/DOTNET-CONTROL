@using Microsoft.AspNetCore.Identity
@using DOTNET_Control.Models
@inject SignInManager<ApplicationUser> SignInManager
@inject UserManager<ApplicationUser> UserManager

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - DOTNET_Control</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/styles.css" asp-append-version="true" />
    <!-- FontAwesome CDN -->
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css" rel="stylesheet" />
    <link href="https://cdn.jsdelivr.net/npm/boxicons@2.1.2/css/boxicons.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.5.0/font/bootstrap-icons.css">
    <link rel="icon" href="~/images2/favicon-32x32.png" type="image/png" />
</head>
<body>

    <header>
        <nav class="navbar navbar-expand-lg navbar-dark" style="background-color: rgb(27, 74, 109);">
            <div class="container-fluid">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">Navbar</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent3" aria-controls="navbarSupportedContent3" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse" id="navbarSupportedContent3">
                    <ul class="navbar-nav me-auto mb-2 mb-lg-0">
                        <li class="nav-item">
                            <a class="nav-link active" asp-area="" asp-controller="Home" asp-action="Index"><i class='bx bx-home-alt me-1'></i>Home</a>
                        </li>

                        <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-controller="Book" asp-action="Index"><i class='bx bx-category-alt me-1'></i>Books</a>
                        </li>
                    </ul>

                    <div class="navbar-nav">
                        @if (SignInManager.IsSignedIn(User))
                        {
                            <!-- Logout Button -->
                            <form asp-controller="Account" asp-action="Logout" method="post" id="logoutForm" class="d-flex">
                                <button type="submit" class="btn btn-dark me-3 radius-30 px-4" title="Logout">
                                    <i class='bx bx-lock'></i> Logout
                                </button>
                            </form>

                            <!-- Favorites Link -->
                            <ul class="navbar-nav">
                                <li class="nav-item">
                                    <a class="btn btn-link nav-link text-light" asp-area="" asp-controller="Favoris" asp-action="Index" title="Favorites">
                                        <i class="fas fa-heart"></i>
                                    </a>
                                </li>
                            </ul>
                        }
                        else
                        {
                            <!-- Login and Register Links for Unauthenticated Users -->
                            <ul class="navbar-nav">
                                <li class="nav-item">
                                    <a class="btn btn-dark me-3 radius-30 px-4" asp-controller="Account" asp-action="Login" title="Login">
                                        <i class='bx bx-lock'></i> Login
                                    </a>
                                </li>
                                <li class="nav-item">
                                    <a class="btn btn-light radius-30 px-4" asp-controller="Account" asp-action="Register" title="Register">
                                        <i class='bx bx-user'></i> Register
                                    </a>
                                </li>
                            </ul>
                        }
                    </div>
                </div>
            </div>
        </nav>
    </header>

    <main role="main" class="pb-3">
        @RenderBody()
    </main>

    <style>

        /* In your custom CSS file (e.g., site.css) */
        .custom-blue {
            background-color: rgb(27, 74, 109);
        }

    </style>



    <footer>
        <div class="custom-blue text-white">
            <div class="container py-4">
                <div class="row g-4">
                    <div class="col-12 col-md-4">
                        <img src="@Url.Content("~/images/logo.png")" alt="Logo" class="img-fluid w-50 w-md-auto" />
                        <p class="mt-3 fs-6">
                            Bib Emsi and the Editions de la Culture continue to demonstrate innovation, creativity, and quality. Over the years, the group has become an important player in educational publishing for the Moroccan private education sector.
                        </p>
                        <div class="d-flex gap-3 mt-3">
                            <a href="#" class="text-light fs-4"><i class="bi bi-instagram"></i></a>
                            <a href="#" class="text-light fs-4"><i class="bi bi-twitter"></i></a>
                            <a href="#" class="text-light fs-4"><i class="bi bi-facebook"></i></a>
                        </div>
                    </div>

                    <div class="col-12 col-md-2">
                        <p class="fw-bold fs-6">Who are we?</p>
                        <ul class="list-unstyled fs-6">
                            <li>Company Overview</li>
                            <li>Company Professions</li>
                            <li>Message from the Director</li>
                        </ul>
                    </div>

                    <div class="col-12 col-md-2">
                        <p class="fw-bold fs-6">Partner Editions</p>
                        <ul class="list-unstyled fs-6">
                            <li><a href="#" class="text-white">SEDRAP Editions</a></li>
                            <li><a href="#" class="text-white">Belin Editions</a></li>
                            <li><a href="#" class="text-white">Sed Editions</a></li>
                            <li><a href="#" class="text-white">Lelivrescolaire.fr Editions</a></li>
                            <li><a href="#" class="text-white">Belin Gallimard Editions</a></li>
                            <li><a href="#" class="text-white">Fuzeau Editions</a></li>
                            <li><a href="#" class="text-white">GENERATION 5 Editions</a></li>
                            <li><a href="#" class="text-white">BERTRAND LACOSTE Editions</a></li>
                            <li><a href="#" class="text-white">AVERBODE Editions</a></li>
                            <li><a href="#" class="text-white">ERASME Editions</a></li>
                            <li><a href="#" class="text-white">LABOR Education Editions</a></li>
                            <li><a href="#" class="text-white">DIATEINO Editions</a></li>
                            <li><a href="#" class="text-white">ALPEN Editions</a></li>
                            <p class="mt-2 fs-6">More</p>
                        </ul>
                    </div>

                    <div class="col-12 col-md-2">
                        <p class="fw-bold fs-6">Spaces</p>
                        <ul class="list-unstyled fs-6">
                            <li>Company Overview</li>
                            <li>Company Professions</li>
                            <li>Message from the Director</li>
                        </ul>
                    </div>

                    <div class="col-12 col-md-2">
                        <p class="fw-bold fs-6">Contact Us</p>
                        <div class="mb-2">
                            <div class="d-flex align-items-center gap-2">
                                <i class="bi bi-telephone text-warning"></i>
                                <span>(+212) 05XXX XXX XXX</span>
                            </div>
                            <div class="d-flex align-items-center gap-2">
                                <i class="bi bi-phone text-warning"></i>
                                <span>(+212) 06XXX XXX XXX</span>
                            </div>
                        </div>
                        <div class="d-flex align-items-center p-2 border border-warning rounded">
                            <i class="bi bi-envelope text-warning"></i>
                            <a href="mailto:contact@dsm.com" class="text-white ms-2 fs-6">Send us an email</a>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="custom-blue text-center py-2">
            <p class="text-light mb-0 fs-6">© 2024 Librairie D.S.M. All rights reserved.</p>
        </div>
    </footer>










    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
