@model DOTNET_Control.Models.Book

@{
    ViewData["Title"] = "Create Book";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="page-breadcrumb d-none d-sm-flex align-items-center mb-3">
    <div class="breadcrumb-title pe-3">eCommerce</div>
    <div class="ps-3">
        <nav aria-label="breadcrumb">
            <ol class="breadcrumb mb-0 p-0">
                <li class="breadcrumb-item">
                    <a href="@Url.Action("Index", "Admin")"><i class="bx bx-home-alt"></i></a>
                </li>
                <li class="breadcrumb-item">Books List</li>
                <li class="breadcrumb-item active" aria-current="page">Create Book</li>
            </ol>
        </nav>
    </div>
</div>

<div class="card">
    <div class="card-header py-3">
        <h5 class="mb-0">Create New Book</h5>
    </div>
    <div class="card-body">
        <form asp-action="CreateBook" method="post" enctype="multipart/form-data">
            @Html.AntiForgeryToken()
            <div class="row g-3">
                <div class="col-12">
                    <label asp-for="Title" class="form-label">Title</label>
                    <input asp-for="Title" class="form-control" required>
                    <span asp-validation-for="Title" class="text-danger"></span>
                </div>

                <div class="col-12">
                    <label asp-for="AuthorId" class="form-label">Author</label>
                    <select asp-for="AuthorId" class="form-select" required>
                        <option value="">Select Author</option>
                        @foreach (var author in ViewBag.Authors)
                        {
                            <option value="@author.Id">@author.Name</option>
                        }
                    </select>
                    <span asp-validation-for="AuthorId" class="text-danger"></span>
                </div>
                <div class="col-12">
                    <label class="form-label">Upload Image</label>
                    <input type="file" name="ImageFile" class="form-control">
                </div>


                <div class="col-12">
                    <label asp-for="PublisherId" class="form-label">Publisher</label>
                    <select asp-for="PublisherId" class="form-select" required>
                        <option value="">Select Publisher</option>
                        @foreach (var publisher in ViewBag.Publishers)
                        {
                            <option value="@publisher.Id">@publisher.Name</option>
                        }
                    </select>
                    <span asp-validation-for="PublisherId" class="text-danger"></span>
                </div>

                <div class="col-12">
                    <label asp-for="CategoryId" class="form-label">Category</label>
                    <select asp-for="CategoryId" class="form-select" required>
                        <option value="">Select Category</option>
                        @foreach (var category in ViewBag.Categories)
                        {
                            <option value="@category.Id">@category.Name</option>
                        }
                    </select>
                    <span asp-validation-for="CategoryId" class="text-danger"></span>
                </div>

                <div class="col-12">
                    <button type="submit" class="btn btn-primary px-4">Create Book</button>
                    <a asp-action="Index" class="btn btn-secondary px-4">Back to List</a>
                </div>
            </div>
        </form>
    </div>
</div>

